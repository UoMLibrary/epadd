<%--Modal for showing some text and offering a copy-to-clipboard option--%>
<div id="copy-modal" class="info-modal modal fade" style="z-index:99999">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Copy</h4>
			</div>
			<div class="modal-body" style="overflow-wrap:break-word"> <!-- overflow-wrap needed because ID URL could be very long -->
				<textarea style="width:100%; height:120px;" class="copy-textarea"></textarea>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" class="copy-button btn btn-default" data-dismiss="modal">Copy</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
